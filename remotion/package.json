{
  "name": "blog-video-generator",
  "version": "2.0.0",
  "description": "Remotion video generator for blog articles with slide-based video support",
  "type": "module",
  "scripts": {
    "start": "remotion studio",
    "build": "remotion render BlogVideo out/video.mp4",
    "build:slide": "remotion render SlideVideo out/slide_video.mp4",
    "build:short": "remotion render BlogVideoShort out/video_short.mp4",
    "render": "node render.mjs",
    "render:blog": "node render.mjs BlogVideo",
    "render:slide": "node render.mjs SlideVideo",
    "preview": "remotion preview",
    "upgrade": "remotion upgrade",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@remotion/bundler": "4.0.0",
    "@remotion/cli": "4.0.0",
    "@remotion/player": "4.0.0",
    "@remotion/renderer": "4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remotion": "4.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "typescript": "^5.3.0"
  }
}
